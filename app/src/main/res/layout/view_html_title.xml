<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#2D3031">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/view_padding"
        android:src="@mipmap/icon_close"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_htmltitle"
        style="@style/txt_titleStyle1"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/title_padding"
        android:layout_toRightOf="@+id/view"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:visibility="visible" />

    <View
        android:id="@+id/view"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/title_padding"
        android:layout_marginTop="@dimen/title_padding"
        android:layout_toRightOf="@id/iv_close"
        android:background="@color/black" />
</RelativeLayout>